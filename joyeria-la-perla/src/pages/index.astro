---
import Layout from '../layouts/Layout.astro';

import Header from '../components/Header.astro';
import Button from '../components/Button.astro';
import Image from '../components/Image.astro';
import Footer from "../components/Footer.astro";

import cadenaImage from '../Images/cadena.webp';
import esclavaImage from '../Images/esclava.jpg';
---

<Layout title="Joyeria La Perla">
	<Header/>

	<main>
		<Button text="Explore our latest catalog"/>
		<Image src={cadenaImage} alt="Cadena"/>
		<Image src={esclavaImage} alt="Cadena"/>
	</main>

	<Footer/>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}
</style>
