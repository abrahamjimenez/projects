---
import {Image} from 'astro:assets';

const {title, image, alt, telephone} = Astro.props;
---

<p>{title}</p>
<Image src={image} alt={alt}/>
<a href=`tel:${telephone}`>
	<i class="fa-solid fa-phone"></i>
	<span>{telephone}</span>
</a>
<br>
<a href="../pages/locations">
	<i class="fa-solid fa-location-dot"></i>
	<span>Hours & Directions</span>
</a>

<style>
	img {
		width: 100%;
		height: auto;
		align-self: center;
		padding: 1rem;
	}

	p,
	a {
		padding-left: 1rem;
	}

	p {
		margin-bottom: 0;
		margin-top: 32px
	}

	a {
		display: flex;
		gap: 1rem;
		margin-top: .5rem;
		margin-bottom: .5rem;
		text-decoration: none;
		color: var(--text-color)
	}

	i {
		width: 16px;
		height: 16px;
	}
</style>