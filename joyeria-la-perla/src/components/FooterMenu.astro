---
import FooterMenuItem from "./FooterMenuItem.astro";
import FooterMenuItemLinks from "./FooterMenuItemLink.astro";
---

<div class="container">
	<FooterMenuItem text="Anillos "/>
	<div class="item__container">
		<FooterMenuItemLinks href="/" title="Compromiso"/>
		<FooterMenuItemLinks href="/" title="Quince"/>
	</div>
</div>
<div class="container">
	<FooterMenuItem text="Anillos "/>
	<div class="item__container">
		<FooterMenuItemLinks href="/" title="Compromiso"/>
		<FooterMenuItemLinks href="/" title="Quince"/>
	</div>
</div>

<script>
	const text = document.querySelector('.text');
	const items = document.querySelector('.item__container');

	text.addEventListener('click', () => {
		items.classList.toggle('item__container--active');
	});
</script>

<style>
	.container {
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}

	.item__container {
		height: 0;
		transition: height 0.3s ease-in-out;

		a {
			display: block;
			color: transparent;
			transition: color 0.3s ease-in-out;
		}
	}

	.item__container--active {
		height: 100px;

		a {
			color: var(--text-color);
		}
	}
</style>

